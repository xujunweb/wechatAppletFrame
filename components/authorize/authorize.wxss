/* 授权弹框 */
.hide {display: none;}
.show {display: block;}
.popup_box {position: fixed;top: 0;left:0;width: 100%;height: 100%;z-index: 99996;}
.popup_bg {position: fixed;top: 0;left:0;width: 100%;height: 100%;background: rgba(0,0,0,0.7);z-index: 99997;}
.popup_cont {position: fixed;top: 50%;left:50%;width: 604rpx;height: 772rpx; margin-top: -386rpx; margin-left:-302rpx;z-index: 999968;}
.popup_warp {height:100%;}
.popup_warp_bg { height: 100%; background:#ffffff;padding:0;-moz-border-radius: 20rpx;-o-border-radius: 20rpx;-webkit-border-radius: 20rpx;border-radius: 20rpx;}
.popup_warp_bg .head {height: 90rpx;line-height: 90rpx;text-align: center;padding-top: 40rpx;}
.popup_warp_bg .head .text {font-size: 34rpx;color: #222222;font-weight: 400;}
.popup_warp_bg .body {}
.popup_warp_bg .body .image_box {width: 100%;margin-top: 20rpx;}
.popup_warp_bg .body .img {display: block;width: 300rpx; height: 300rpx; margin: 0 auto;}
.popup_warp_bg .body .text1 {padding: 10rpx 0;}
.popup_warp_bg .body .text1 text { display: block; text-align: center;line-height: 40rpx; font-size: 26rpx;color: #555555;}
.popup_warp_bg .btn_box {display: block; width: 100%; height: 82rpx;margin-top: 40rpx;}
.popup_warp_bg .sure-btn {display: block; width: 460rpx; height: 82rpx;margin: 0 auto;line-height: 82rpx;text-align: center;color: #ffffff;font-size: 30rpx;-moz-border-radius: 10rpx;-o-border-radius: 50rpx;-webkit-border-radius: 50rpx;border-radius: 50rpx;background: #9da3f1; letter-spacing: 4rpx;}
.popup_warp_bg .sure-btn::after {border: none;}
